<h1 class="mb-4"><i class="bi bi-receipt-cutoff"></i> Order Receipt #<%= sale.sale_id %></h1>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header bg-dark text-white">
        <h5 class="mb-0">Order Details</h5>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-6">
            <strong>Order ID:</strong> #<%= sale.sale_id %><br>
            <strong>Date:</strong> <%= sale.sale_date %>
          </div>
          <div class="col-md-6">
            <strong>Status:</strong> <span class="badge bg-success">Completed</span>
          </div>
        </div>

        <hr>

        <h5 class="mb-3">Items</h5>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <% items.forEach(item => { %>
                <tr>
                  <td>Product #<%= item.product_id %></td>
                  <td><%= item.quantity %></td>
                  <td>$<%= parseFloat(item.price_at_sale || 0).toFixed(2) %></td>
                  <td>$<%= (parseFloat(item.price_at_sale || 0) * parseInt(item.quantity || 0)).toFixed(2) %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <hr>

        <div class="text-end">
          <div class="mb-2">
            <strong>Subtotal:</strong> $<%= parseFloat(sale.subtotal || 0).toFixed(2) %>
          </div>
          <div class="mb-2">
            <strong>Discount:</strong> $<%= parseFloat(sale.discount_amount || 0).toFixed(2) %>
          </div>
          <div class="h4 text-success">
            <strong>Total:</strong> $<%= parseFloat(sale.total_amount || 0).toFixed(2) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <a href="<%= currentUser.role === 'admin' ? '/admin/sales' : '/sales/my-orders' %>" class="btn btn-secondary">
    <i class="bi bi-arrow-left"></i> Back to Orders
  </a>
  <% if (currentUser && currentUser.role === 'admin') { %>
    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#discountModal">
      <i class="bi bi-tag"></i> Apply Discount
    </button>
  <% } %>
</div>

<!-- Discount Modal -->
<% if (currentUser && currentUser.role === 'admin') { %>
<div class="modal fade" id="discountModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Apply Discount to Order #<%= sale.sale_id %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form action="/admin/sales/<%= sale.sale_id %>/discount" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="discount_percentage" class="form-label">Discount Percentage</label>
            <div class="input-group">
              <input type="number" step="0.01" min="0" max="100" class="form-control" 
                     id="discount_percentage" name="discount_percentage" 
                     value="<%= parseFloat(sale.discount_percentage || 0) %>" required>
              <span class="input-group-text">%</span>
            </div>
            <small class="form-text text-muted">Enter discount percentage (0-100). Current: <%= parseFloat(sale.discount_percentage || 0) %>%</small>
          </div>
          <div class="alert alert-info">
            <strong>Subtotal:</strong> $<%= parseFloat(sale.subtotal || 0).toFixed(2) %><br>
            <strong>Current Discount:</strong> $<%= parseFloat(sale.discount_amount || 0).toFixed(2) %><br>
            <strong>Current Total:</strong> $<%= parseFloat(sale.total_amount || 0).toFixed(2) %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-warning">
            <i class="bi bi-tag-fill"></i> Apply Discount
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<% } %>