<h1 class="mb-4"><i class="bi bi-receipt"></i> All Orders</h1>

<% if (sales.length === 0) { %>
  <div class="alert alert-info">
    No orders found.
  </div>
<% } else { %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="table-dark">
        <tr>
          <th>Order ID</th>
          <th>Date</th>
          <th>User ID</th>
          <th>Subtotal</th>
          <th>Discount</th>
          <th>Total</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% sales.forEach(sale => { %>
          <tr>
            <td>#<%= sale.sale_id %></td>
            <td><%= sale.sale_date %></td>
            <td><%= sale.user_id %></td>
            <td>$<%= parseFloat(sale.subtotal || 0).toFixed(2) %></td>
            <td>$<%= parseFloat(sale.discount_amount || 0).toFixed(2) %></td>
            <td><strong>$<%= parseFloat(sale.total_amount || 0).toFixed(2) %></strong></td>
            <td>
              <a href="/sales/<%= sale.sale_id %>" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-eye"></i> View
              </a>
              <% if (currentUser && currentUser.role === 'admin') { %>
                <button type="button" class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#discountModal<%= sale.sale_id %>">
                  <i class="bi bi-tag"></i> Discount
                </button>
              <% } %>
            </td>
          </tr>
          
          <!-- Discount Modal for Order -->
          <% if (currentUser && currentUser.role === 'admin') { %>
          <div class="modal fade" id="discountModal<%= sale.sale_id %>" tabindex="-1">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Apply Discount to Order #<%= sale.sale_id %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/sales/<%= sale.sale_id %>/discount" method="POST">
                  <div class="modal-body">
                    <div class="mb-3">
                      <label for="discount_percentage_<%= sale.sale_id %>" class="form-label">Discount Percentage</label>
                      <div class="input-group">
                        <input type="number" step="0.01" min="0" max="100" class="form-control" 
                               id="discount_percentage_<%= sale.sale_id %>" name="discount_percentage" 
                               value="<%= parseFloat(sale.discount_percentage || 0) %>" required>
                        <span class="input-group-text">%</span>
                      </div>
                      <small class="form-text text-muted">Enter discount percentage (0-100). Current: <%= parseFloat(sale.discount_percentage || 0) %>%</small>
                    </div>
                    <div class="alert alert-info">
                      <strong>Subtotal:</strong> $<%= parseFloat(sale.subtotal || 0).toFixed(2) %><br>
                      <strong>Current Discount:</strong> $<%= parseFloat(sale.discount_amount || 0).toFixed(2) %><br>
                      <strong>Current Total:</strong> $<%= parseFloat(sale.total_amount || 0).toFixed(2) %>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                      <i class="bi bi-tag-fill"></i> Apply Discount
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <% } %>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } %>