<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="bi bi-box-seam"></i> Manage Products</h1>
  <a href="/admin/products/create" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> Add New Product
  </a>
</div>

<% if (products.length === 0) { %>
  <div class="alert alert-info">
    No products found. <a href="/admin/products/create">Create your first product</a>
  </div>
<% } else { %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Type</th>
          <th>Price</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.product_id %></td>
            <td><strong><%= product.product_name %></strong></td>
            <td><%= product.product_type %></td>
            <td>$<%= parseFloat(product.unit_price || 0).toFixed(2) %></td>
            <td>
              <span class="badge bg-<%= product.status === 'available' ? 'success' : 'secondary' %>">
                <%= product.status %>
              </span>
            </td>
            <td>
              <a href="/admin/products/edit/<%= product.product_id %>" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
              </a>
              <form action="/admin/products/delete/<%= product.product_id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                <button type="submit" class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i> Delete
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } %>